#about
  width 100%
  height 100vh
  overflow scroll
  background-color #fafafa
  .close
    width 20px
    height 20px
    margin 40px
    position absolute
    top 0
    right 0
  a
    color #c600ff
  .column
    max-width 1800px
    margin-left auto
    margin-right auto
    table.about-intro
      border none
      border-collapse collapse
      width 80%
      padding 0
      margin-left 10%
      margin-right 10%
      max-height 200px
      td
        width 50%
        padding 80px
        img
          width 100%
          height auto
          min-width 360px
    h1
      text-transform uppercase
      font-size 30pt
      font-weight 600
      margin-bottom -15px
    .subtitle-divider
      background-color black
      display inline-block
      float left
      width 170px
      height 2px
      margin-top 24px
      margin-right 10px
    p
      font-size 14pt
      font-weight 400
      color #5d5d5d
    div.title
      display: flex
      justify-content: center
    .subtitle
      float clear
      color #c600ff !important
      text-transform uppercase
      font-weight 600 !important
      font-size 12pt !important
    table.experience
      border none
      border-collapse collapse
      width 96%
      padding 0
      margin-left 2%
      margin-right 2%
      td
        vertical-align top
        width 50%
        padding-left 10px
        padding-right 10px
    td > .year
      display block
      position relative
    td:hover
      h2.position-year
        color #c600ff
    h2.position-year
      position absolute
      font-size 100pt
      display block
      top 50px
      left -280px
      background-color rgba(0,0,0,0) !important
      font-family: 'Futura BdCn BT'
      font-weight: bold
      font-style: normal
    h3.position-end
      display block
      position absolute
      top 200px
      left -260px
      color #c600ff
      font-size 20pt
      background-color rgba(0,0,0,0) !important
      font-family: 'Futura BdCn BT'
      font-weight: bold
      font-style: normal
    td > .position
      display block
      position relative
      margin-bottom 20px
      h2
        padding-top 20px
      h2, h3, p
        background-color #ddd
        padding-left 100px
        padding-right 20px
        padding-bottom 10px
        margin-left 180px
        margin-bottom 0
        margin-top 0
      p
        min-height 200px
        padding-bottom 40px
    td:hover > .position
      h2, h3, p
        background-color #f4f4f4 !important
      h2.position-year, h3.position-end
        background-color rgba(0,0,0,0) !important
    .early
      margin-left auto
      margin-right auto
      max-width 1024px
      padding-left 20px
      padding-right 20px
      padding-bottom 40px
    table.interests
      width 80%
      margin-top 40px
      margin-left auto
      margin-right auto
      margin-bottom 60px
      border-collapse collapse
      border none
      tr td
        width 20%
        text-align center
      td p
        font-weight 600
    p.interests
      margin-left auto
      margin-right auto
      max-width 1024px
      padding-left 20px
      padding-right 20px
      padding-bottom 20px


#about.initial
  position absolute
  top -100vh
  left 0

#about.movein
  top 0
  animation-name about-movein
  animation-duration 0.5s

#about.moveout
  top 0
  animation-name about-moveout
  animation-duration 0.5s

@-webkit-keyframes about-movein {
  from {top: -100vh}
  to {top: 0}
}

@keyframes about-movein {
  from {top: -100vh}
  to {top: 0}
}

@-webkit-keyframes about-moveout {
  from {top: 0}
  to {top: -100vh}
}

@keyframes about-moveout {
  from {top: 0}
  to {top: -100vh}
}

@media (prefers-color-scheme: dark) {
  #about {
    .column {
      .subtitle-divider {
        background-color: #ccc;
      }
    }

    background-color: #080808;
    table.experience {
      td > .position {
        h2, h3, p {
          background-color #111
        }
      }
      td:hover > .position {
        h2, h3, p {
          background-color #151515 !important
        }
      }
    }
  }
}

@media only screen and (max-width: 1200px) {
  #about {
    table.experience tr, table.experience td, table.about-intro tr, table.about-intro td {
      display block
      margin-left auto !important
      margin-right auto !important
    }
    table.experience td, table.about-intro td {
      padding 0 !important
      width 100% !important
      img {
        max-width 400px
      }
    }
    .column h2.position-year {
      font-size 60pt
      left -190px
    }
    .column h3.position-end {
      top 150px
      left -180px
      font-size 14pt
    }
    td > .position {
      h2, h3, p {
        padding-left 90px !important
        margin-left 110px !important
      }
    }
  }
}

@media only screen and (max-width: 768px) {
  #about {
    overflow-x hidden
    table.about-intro td p {
      padding-right 20px
      margin-right 20px
    }

    table.experience td p {
      margin-left 0
    }
    .column h2.position-year {
      font-size 60pt
      left -205px
      top -15px
    }
    .column h3.position-end {
      top 85px
      left -190px
      font-size 14pt
    }
    td > .position {
      h2 {
        min-height 60px
      }
      h2, h3 {
        padding-left 180px !important
        margin-left 30px !important
      }
      p {
        padding-left 10px !important
        margin-left 30px !important
      }
    }
  }
}
